<h1 class="fields-primary-color">Fields in Database</h1>

<table class="fields-table">
  <thead>
    <tr>
      <th>Field Name</th>
      <th>Field Alias</th>
      <th>Used</th>
      <th>Many</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.field_name %></td>
        <td><%= field.field_alias %></td>
        <td><%= field.field_used %></td>
        <td><%= field.field_many %></td>
        <td><%= link_to 'Show', field, class: "fields-button" %></td>
        <td><%= link_to 'Edit', edit_field_path(field), class: "fields-button" %></td>
        <td><%= link_to 'Destroy', field, method: :delete, data: { confirm: 'Are you sure?' }, class: "fields-button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Field', new_field_path, class: "fields-button" %>
